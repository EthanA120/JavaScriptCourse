<%- include('header'); -%>

    <body>
        <div id="heading" class="box">
            <h1>Todo List</h1>
        </div>

        <div class="box">
            <% for( let item of items) { %>
                <div class="item">
                    <input type="checkbox">
                    <p>
                        <%= item %>
                    </p>
                </div>
                <% } %>

                    <form class="item" action="/" method="post">
                        <input type="text" name="newItem" placeholder="New Item" required>
                        <button type="submit" name="button">+</button>
                    </form>
        </div>

    </body>

<%- include('footer'); -%>